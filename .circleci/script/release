#!/usr/bin/env bash

rm -rf /tmp/release
mkdir -p /tmp/release
cp "pod-babashka-parcera" /tmp/release

VERSION=$(cat resources/POD_VERSION)

cd /tmp/release

## release binary as zip archive

zip "pod-babashka-parcera-$VERSION-$BABASHKA_PLATFORM-amd64.zip" "pod-babashka-parcera"

## cleanup

rm "pod-babashka-parcera"
